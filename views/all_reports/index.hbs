<div class="cardContainer">
    {{#each reports}}
    <ul>
        <div id="container">
            <h5>Title: {{this.title}}</h5>
            <button id="edit-title-button" type="button" class="btn btn-success"><a id="edit-title"
                    href="/all_reports/{{this._id}}/edit_title">edit title</a></button><br>
            <div id="card" class="report-info">
                Note: {{this.note}}<a href="/all_reports/{{this._id}}/edit"> (edit note)</a><br>
                <ul id="facts">
                    <li><span>{{this.personality.0.name}}:</span>
                        <em>{{this.personality.0.percentile}} percentile</em></li> <br>
                    <li><span>{{this.personality.1.name}}:</span>
                        <em>{{this.personality.1.percentile}} percentile</em> </li><br>
                    <li><span>{{this.personality.2.name}}:</span>
                        <em>{{this.personality.2.percentile}} percentile</em> </li><br>
                    <li><span>{{this.personality.3.name}}:</span>
                        <em>{{this.personality.3.percentile}} percentile</em> </li><br>
                    <li><span>{{this.personality.4.name}}:</span>
                        <em>{{this.personality.4.percentile}} percentile</em> </li><br>
                    <p id="summary">{{this.summary}}</p>
                </ul>

                <button id="delete-button" type="button" class="btn btn-danger"><a id="delete-link"
                        href="/all_reports/{{this._id}}/delete">delete</a></button>
            </div>
    </ul>
    {{/each}}
</div>











